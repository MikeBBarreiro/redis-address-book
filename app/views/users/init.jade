extends ../shared/template
block content
  h2 Sign up
  .row
    .col-xs-4
    .col-xs-4

      form(role='form', method='post', action='/register')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', autofocuz=true)
        .form-group
          label(for='password') Password
          input.form-control#pass(type='password', name='password')
        button.btn.btn-primary(type='submit') Register
    .col-xs-4
